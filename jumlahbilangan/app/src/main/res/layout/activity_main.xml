<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="Menjumlahkan 2 Buah bilangan" />
    <TextView
        android:id="@+id/tv_2"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan Bilangan Pertama"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tv_1"
        />
    
    <EditText
        android:id="@+id/et_1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="220dp"
        android:layout_below="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_3"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukan Bilangan Kedua"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/et_1"
        />
    <EditText
        android:id="@+id/et_2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="220dp"
        android:layout_below="@+id/tv_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btn_jmlh"
        android:layout_width="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_height="wrap_content"
        android:text="Hitung Bilangan"
        android:layout_marginTop="250dp"
        android:textAllCaps="false"
        android:layout_below="@+id/tv_1"
        />
    <TextView
        android:id="@+id/tv_4"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/btn_jmlh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hasil"
        />
    <EditText
        android:id="@+id/et_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:layout_below="@+id/tv_4"
        />
</RelativeLayout>