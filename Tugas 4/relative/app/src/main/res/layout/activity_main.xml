<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/heading_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alvan_hanani"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="sans"
            android:layout_alignParentTop="true"
            android:layout_margin="30dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re2"
        android:layout_below="@id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Nama" />

        <EditText
            android:id="@+id/edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/alamat" />

        <EditText
            android:id="@+id/edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/kampus" />

        <EditText
            android:id="@+id/edit3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re3"
        android:layout_below="@id/re2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gambar1"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/gambarku" />
        <ImageView
            android:id="@+id/gambar2"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:src="@drawable/gambarku"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/gambar3"
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/gambarku" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/re3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn1"
            android:layout_width="140dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:text="@string/kembali"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="140dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text="NEXT"
            />

    </RelativeLayout>

    </RelativeLayout>
